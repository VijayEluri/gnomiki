<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config />

	<!-- ################################ -->
	<!-- # Configuration specific beans # -->
	<!-- ################################ -->
	<bean id="config" class="org.gnomiki.core.config.impl.PropertiesConfigImpl">
	<constructor-arg>
			<value>clientConfig.properties</value>
		</constructor-arg>
	</bean>
	
	<bean id="resourceBundle" class="java.util.ResourceBundle"
		factory-method="getBundle">
		<constructor-arg>
			<!-- Resource bundles base name -->
			<value>MainFrame</value>
		</constructor-arg>
	</bean>
	<bean id="pluginManager" class="org.gnomiki.client.plugins.ConfigurationPluginManager" init-method="init"/>

	<!-- ############################# -->
	<!-- Main Frame -->
	<!-- ############################# -->
	<bean id="mainFrame" class="org.gnomiki.client.MainFrame"
		init-method="init">
		<property name="title">
			<value>Gnomiki Client</value>
		</property>
	</bean>

</beans>